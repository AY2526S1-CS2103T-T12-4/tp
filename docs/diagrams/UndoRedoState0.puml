@startuml
!include style.puml
skinparam ClassFontColor #000000
skinparam ClassBorderColor #000000
skinparam ClassBackgroundColor #FFFFAA

title Initial state (No contacts/events)

package States {
    class State1 as "<u>ab0:AddressBook</u>\n(Empty - no contacts/events)"
    class State2 as "<u>ab1:AddressBook</u>\n(After contact/event addition)"
    class State3 as "<u>ab2:AddressBook</u>\n(After further modifications)"
}
State1 -[hidden]right-> State2
State2 -[hidden]right-> State3
hide State2
hide State3

class Pointer as "Current State" #FFFFFF
Pointer -up-> State1
@end
